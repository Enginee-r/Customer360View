# Azure Synapse Connection Configuration
# Copy this file to .env.synapse and fill in your actual values

# Synapse Server Details
SYNAPSE_SERVER=your-workspace.sql.azuresynapse.net
SYNAPSE_DATABASE=your_database_name
SYNAPSE_PORT=1433
SYNAPSE_DRIVER={ODBC Driver 17 for SQL Server}

# Authentication Method: 'sql' or 'aad'
SYNAPSE_AUTH_METHOD=sql

# SQL Authentication (if using SYNAPSE_AUTH_METHOD=sql)
SYNAPSE_USERNAME=your_username
SYNAPSE_PASSWORD=your_password

# Azure Active Directory Authentication (if using SYNAPSE_AUTH_METHOD=aad)
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Schema Configuration
SYNAPSE_GOLD_SCHEMA=gold

# Connection Pool Settings
SYNAPSE_POOL_SIZE=5
SYNAPSE_POOL_TIMEOUT=30

# Data Loading Mode: 'synapse' or 'local'
# Set to 'local' for development with local parquet files
# Set to 'synapse' for production with Synapse connection
DATA_SOURCE=local
